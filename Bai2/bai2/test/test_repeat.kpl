// Test REPEAT UNTIL loop
PROGRAM TestRepeatUntil;
VAR 
  counter : INTEGER;
  sum : INTEGER;
BEGIN
  counter := 1;
  sum := 0;
  
  REPEAT
    sum := sum + counter;
    counter := counter + 1;
  UNTIL counter > 10;
  
  // Nested example
  counter := 0;
  REPEAT
    counter := counter + 1;
    REPEAT
      sum := sum + 1;
    UNTIL sum >= 100;
  UNTIL counter >= 5;
END.
